<%- include('../../partials/header.ejs')%>
    <%- include('../../partials/navbar.ejs')%>

        <div class="container">
            <hr>
            <div class="card">

                <div class="card-header">
                    <h2>Novo Artigo</h2>
                </div>

                <div class="card-body">


                    <form action="/articles/save" method="post">
                        <input class="form-control" type="text" name="title"
                            placeholder="Defina o titulo do artigo"><br>
                        <textarea class="form-control" name="body" id="article" cols="30" rows="10">

                        </textarea>




                        <br>
                        <!-- <label>Selecione a categoria</label>

                        <select name="category" class="form-control">
                            <%testes.forEach((testes)=> { %>
                                <option value="<%=testes.id%>">
                                    <%=testes.nome%>
                                </option>
                            <%})%>
                        </select> -->
                        <br>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                <th>ID</th>
                                <th>NOME</th>
                                <th>IDADE</th>
                                <th>Ações</th>
                                </tr>
                            </thead>
                            <%testes.forEach((testes)=> { %>
                                <tr>
                                    
                                    <th><%=testes.id%></th>
                                    <th><%=testes.nome%></th>
                                    <th><%=testes.idade%></th>                                                
                                
                                    <th>
                                        <a href="/admin/articles/newa/edit/<%=testes.id%>" class="btn btn-warning">Editar</a>

                                        <form action="/admin/articles/newa/delete" method="post" style="display: inline">
                                            <input type="hidden" name="id" value="<%=testes.id%>">
                                            <button class="btn btn-danger">Deletar</button>
                                        </form>
                                    </th>


                            
                                </tr>
                            <%})%> 
                            <tbody>


                            </tbody>
                        </table>






                        <button class="btn btn-success" type="submit">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include('../../partials/footer.ejs')%>

            <script src="/tinymce/tinymce.min.js"></script>
            <script>
                tinymce.init({
                    language: 'pt_BR',
                    selector: "#article",
                    plugins: [
                        'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'

                    ]
                })
            </script>